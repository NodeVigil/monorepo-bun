{
  "version": 2,
  "builds": [
    {
      "src": "apps/server/src/index.js",
      "use": "vercel-bun@latest"
    },
    {
      "src": "apps/client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "apps/server/src/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "apps/client/$1"
    }
  ]
}
